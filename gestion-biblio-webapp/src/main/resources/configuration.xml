<beans>
    <!-- ===== Déclaration des DAO ===== -->
    <bean id="exmplaireDao" class="com.opc.projet.gestionbiblio.business.consumer.impl.dao.ExemplaireDaoImpl">
        <!--<property name="utilisateurDao" ref="utilisateurDao" />-->
    </bean>

    <bean id="ouvrageDao" class="com.opc.projet.gestionbiblio.business.consumer.impl.dao.OuvrageDaoImpl" />

    <bean id="adresseDao" class="com.opc.projet.gestionbiblio.business.consumer.impl.dao.AdresseDaoImpl" />


    <!-- ===== DaoFactory ===== -->
    <bean id="daoFactory" class="com.opc.projet.gestionbiblio.consumer.impl.dao.DaoFactoryImpl">
        <property name="ouvrageDao" ref="ouvrageDao" />
    </bean>

    <!-- ===== Déclaration des Managers ===== -->
    <bean id="exemplaireManager" class="com.opc.projet.gestionbiblio.business.impl.manager.ExemplaireManagerImpl">
        <property name="daoFactory" ref="daoFactory" />
    </bean>
    <bean id="ouvrageManager" class="com.opc.projet.gestionbiblio.business.impl.manager.OuvrageManagerImpl">
        <property name="daoFactory" ref="daoFactory" />
    </bean>

    <!-- ===== ManagerFactory ===== -->
    <bean id="managerFactory" class="com.opc.projet.gestionbiblio.business.impl.ManagerFactoryImpl">
        <property name="exemplaireManager" ref="exemplaireManager" />
        <property name="ouvrageManager" ref="ouvrageManager" />
    </bean>
</beans>