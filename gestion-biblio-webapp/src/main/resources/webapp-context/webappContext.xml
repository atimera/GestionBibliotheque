    &lt;!&ndash; Prend en compte la configuration des injections (@Inject...) &ndash;&gt;
    <context:annotation-config/>

    &lt;!&ndash; Scanne les packages pour trouver les beans qui se déclarent (@Named...) &ndash;&gt;
    <context:component-scan base-package="com.opc.projet.gestionbiblio.webapp"/>

    &lt;!&ndash; ============================================ &ndash;&gt;
    &lt;!&ndash; ============== Resources JNDI ============== &ndash;&gt;
